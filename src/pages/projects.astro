---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import PortfolioDownload from "../components/portfolio-download.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Projects">
  <section class="relative my-12 px-7 lg:px-0">
    <div class="relative z-20 mx-auto max-w-2xl">
      <PageHeading
        title="Projects and previous work"
        description="Here are some of the projects I've worked on."
      />
    </div>

    {/* Collage + CTA */}
    <PortfolioDownload />

    {/* Projects grid */}
    <div class="relative z-20 mx-auto max-w-4xl">
      <div class="grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2">
        {projects.map((project) => (
          <Project
            name={project.name}
            description={project.description}
            image={project.image}
            url={project.url}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>

